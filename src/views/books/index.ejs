<%- include('../layouts/layout-start', {title: title}) %>
<%- include('../layouts/menu') %>

<section class="title">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mb-3 mt-4"><%= title %></h1>
            </div>
        </div>
    </div>
</section>
<section class="books">
