        <div class="row">
            <div class="col-12">
                <a href="/book/create" class="btn btn-dark">Create new book</a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-dark table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Book name</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                    <% books.map( (book, ind ) => {%>
                    <tr>
                        <th scope="row"><%= ind + 1%></th>
                        <td><%= book.title%></td>
                        <td>
                            <a href="/books/<%= book.id %>" class="btn btn-primary">
